<div class="container">
  <div class="row">
    <div class="col mx-auto">

      <div class="row">
        <div class="col-5">
          <div class="row pt-5 pb-2">
            <h3>新規病棟登録</h3>
          </div>

          <div class="row p-4 m-3 shadow">
            <%=  form_with(model:@ward, url: admin_wards_path, local:true) do |f| %>
              <div class="form-group py-1">
                <%= f.label :ward_name, "病棟名" %>
                <%= f.text_field :ward_name, class: "form-control" %>
              </div>
              <div class="form-group py-1">
                <%= f.submit "登録", class: "btn btn-sm btn-secondary" %>
              </div>
            <% end %>
          </div>
        </div>

        <div class="col-7">
          <div class="row p-5 pb-2">
            <h3>病棟一覧</h3>
          </div>

          <div class="row p-4 m-3 shadow">
            <table class="table p-3">
              <thead>
                <tr>
                  <th>病棟名</th>
                  <th>削除</th>
                </tr>
              </thead>

              <% @wards.each do |ward| %>
              <tbody>
                <tr>
                  <td>
                    <%=  form_with(model:ward, url: admin_ward_path(ward), local:true) do |f| %>
                      <div class="row form-group">
                        <div class="col-7">
                          <%= f.text_field :ward_name, class: "form-control" %>
                        </div>
                        <div class="col-5">
                          <%= f.submit "名前変更", class: "btn btn-sm btn-secondary" %>
                        </div>
                      </div>
                    <% end %>
                  </td>
                  <td><%= link_to "削除", admin_ward_path(ward), method: :DELETE, class: "btn btn-sm btn-danger" %></td>
                </tr>
              </tbody>
              <% end %>
            </table>
          </div>
        </div>
      </div>






    </div>
  </div>
</div>


